<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zk.pbl.AddPbActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="@dimen/DIMEN_10PX"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/corner_no_fill"
                android:paddingLeft="@dimen/DIMEN_10PX">

                <TextView
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="产线:" />

                <Spinner
                    android:id="@+id/spinner_produce_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dialog" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DIMEN_10PX"
                android:background="@drawable/corner_no_fill"
                android:paddingLeft="@dimen/DIMEN_10PX">

                <TextView
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单状态:" />

                <Spinner
                    android:id="@+id/spinner_produce_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dialog" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DIMEN_10PX"
                android:background="@drawable/corner_no_fill"
                android:paddingBottom="@dimen/DIMEN_10PX"
                android:paddingLeft="@dimen/DIMEN_10PX"
                android:paddingTop="@dimen/DIMEN_10PX">

                <TextView
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单类型:" />

                <TextView
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/DIMEN_10PX"
                    android:text="产品" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DIMEN_10PX"
                android:background="@drawable/corner_no_fill"
                android:paddingBottom="@dimen/DIMEN_10PX"
                android:paddingLeft="@dimen/DIMEN_10PX"
                android:paddingTop="@dimen/DIMEN_10PX">

                <TextView
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是否加急:" />

                <TextView
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/DIMEN_10PX"
                    android:text="否" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DIMEN_10PX"
                android:background="@drawable/corner_no_fill"
                android:paddingLeft="@dimen/DIMEN_10PX">

                <TextView
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="产品:" />

                <Spinner
                    android:id="@+id/spinner_produce_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dialog" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DIMEN_10PX"
                android:background="@drawable/corner_no_fill"
                android:paddingLeft="@dimen/DIMEN_10PX">

                <TextView
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单数量:" />

                <Spinner
                    android:id="@+id/spinner_produce_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dialog" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DIMEN_10PX"
                android:background="@drawable/corner_no_fill"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:paddingLeft="@dimen/DIMEN_10PX">


                <TextView
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="备注说明:" />

                <EditText
                    android:id="@+id/et_info"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DIMEN_20PX"
            android:layout_gravity="center_horizontal">
            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="@dimen/DIMEN_100PX"
                android:layout_height="wrap_content"
                android:text="确定"
                android:textColor="@color/white"
                android:layout_marginRight="@dimen/DIMEN_10PX"
                android:background="@drawable/selector_button"/>
            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="@dimen/DIMEN_100PX"
                android:layout_height="wrap_content"
                android:text="取消"
                android:textColor="@color/white"
                android:background="@drawable/selector_button"/>
        </LinearLayout>



</LinearLayout>
